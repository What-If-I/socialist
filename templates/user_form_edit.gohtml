{{template "base" .}}

{{define "main"}}
    <h1>Please fill your data</h1>
    <form action="update-user-info" method="post">
        <label for="name">Name:</label><br>
        <input type="text" id="name" name="name" value="{{.Name}}"><br>

        <label for="surname">Surname:</label><br>
        <input type="text" id="surname" name="surname" value="{{.Surname}}"><br>

        <label for="age">Age:</label><br>
        <input type="number" id="age" name="age" value="{{.Age}}"><br>

        <label for="gender">Gender:</label><br>
        <select id="gender" name="gender">
            <option value="Man">👨</option>
            <option value="Woman">🙋‍♀️</option>
            <option value="Apache Helicopter">🚁</option>
        </select><br>

        <label for="interests">Interests:</label><br>
        <input type="text" name="interests" id="interests" value="{{.Interests}}"><br>

        <label for="City">City:</label><br>
        <input type="text" id="City" name="City" value="{{.City}}"><br>

        <input type="submit" value="Submit">
    </form>
{{end}}
